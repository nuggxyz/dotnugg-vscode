{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "out",
        "lib": ["es2021", "DOM"],
        "sourceMap": true,
        "rootDir": "./",
        "strict": false /* enable all strict type-checking options */,
        "resolveJsonModule": true
        /* Additional Checks */
